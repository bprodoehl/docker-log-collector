<match docker.**>
  type elasticsearch
  host es1
  port 9200
  index_name fluentd
  type_name fluentd
  logstash_format true
  buffer_type memory
  flush_interval 3
  retry_limit 17
  retry_wait 1.0
  num_threads 1
</match>
